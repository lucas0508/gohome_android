<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="电焊维修，水水电改装水电改装水电改装水电改装电改装，各种家装问题"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_home_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水暖工 / 瓦工 / 水电工"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <ImageView
                    android:src="@mipmap/icon_certificate"
                    android:id="@+id/iv_home_skill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="真的不行真的不行对方进行覆盖面挂号费真的不行对方进行覆盖面挂号费真的不行对方进行覆盖面挂号费真的不行对方进行覆盖面挂号费真的不行对方进行覆盖面挂号费对方进行覆盖面挂号费，看的统一高考人数太久没任何，的软实力knew染红了内外热龙回......"
                android:textColor="#ff999999"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/loaction_icon"
                    android:id="@+id/tv_home_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内蒙古呼和浩特市"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_home_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/icon_review"
                    android:drawablePadding="4dp"
                    android:text="1587人"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.qujiali.jiaogegongren.common.model.RoundImageView
                    android:id="@+id/riv_headImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/common_head_picture"
                    app:type="circle" />

                <TextView
                    android:id="@+id/riv_home_name"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王铁锤"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_home_sex"
                    android:layout_marginLeft="4dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/tv_home_age"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="#FE9500"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_auth"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已实名"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="#068BEE"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_technicalAbility"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学徒工"
                    android:textColor="#ff333333"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="企业"
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/background_shape_task"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>

