<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="电焊维修，水水电改装水电改装水电改装水电改装电改装，各种家装问题"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tv_home_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水暖工 / 瓦工 / 水电工"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_home_skill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="高级电工"
                    android:textColor="#ff068bee"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_home_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/loaction_icon"
                    android:gravity="center_vertical"
                    android:text="内蒙古呼和浩特市"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_home_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/icon_review"
                    android:drawablePadding="4dp"
                    android:text="1587人"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <com.qujiali.jiaogegongren.common.model.RoundImageView
                    android:id="@+id/riv_headImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/common_head_picture"
                    app:type="circle" />

                <TextView
                    android:id="@+id/riv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="王铁锤"
                    android:textColor="#ff666666"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_home_sex"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:id="@+id/tv_home_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="#FE9500"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="29"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_home_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="#068BEE"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    android:text="已实名"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/tv_home_technicalAbility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/background_shape_drak"
                    android:gravity="right"
                    android:text="取消关注"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/background_shape_task"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="企业"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/iv_zhuxiao"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_zhuxiao">

        </ImageView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>