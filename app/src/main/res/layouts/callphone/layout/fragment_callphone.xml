<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">


    <include layout="@layout/base_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tv_choose_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/icon_bottom"
            android:drawablePadding="8dp"
            android:text="呼和浩特"
            android:textColor="#666666"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_quotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_tv_quotation"
            android:drawablePadding="5dp"
            android:text="参考价"
            android:textColor="#ff02a8fe"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="14dp"
            android:id="@+id/ll_openBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:visibility="visible">

           <!-- <ImageView
                android:id="@+id/iv_callPhone2"
                android:layout_width="180dp"
                android:src="@mipmap/icon_callphone"
                android:layout_height="180dp"
                android:visibility="visible" />-->
            <LinearLayout
                android:id="@+id/iv_callPhone"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_callPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12545641312"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#F32D2D"
                    android:textSize="38sp" />

                <Button
                    android:clickable="false"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/common_button_selector_red"
                    android:layout_marginTop="14dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="点我 拨打电话"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
                <View
                    android:layout_width="190dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:background="#000"/>
                <TextView
                    android:id="@+id/tv_franchiseeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="平台电话叫工 尊享优质服务"
                android:textColor="#ff343434"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="精挑平台优秀工人为家庭企业提供用工服务"
                android:textColor="#ff343434"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_feedbackCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="投诉电话：400-055-065"
                android:textColor="#ff343434"
                android:textSize="16sp" />


        </LinearLayout>



        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_NoBusiness"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_no_business" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_NoBusiness"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="此服务在该城市尚未开通敬请期待"
                android:textColor="#ff666666"
                android:textSize="16sp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加盟热线：16604870000"
                android:textColor="#F32D2D"
                android:textSize="16sp"
                />
        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableStart="@mipmap/icon_servicearea"
        android:drawableEnd="@mipmap/icon_servicearea"
        android:text="服务范围"
        android:textColor="#ff333333"
        android:textSize="17sp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_serviceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:textColor="#ff666666"
        android:textSize="16sp" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_serviceType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#ff666666"
        android:textSize="16sp" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_serviceIntroduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="40dp"
        android:text="何以解忧 唯有叫个工人"
        android:layout_marginEnd="20dp"
        android:textColor="#F32D2D"
        android:textSize="16sp" />


</LinearLayout>